  "license": "MIT",
  "scripts": {
    "db:create": "npx sequelize db:create",
    "db:migrate": "npx sequelize db:migrate",
    "db:migrate:undo:all": "npx sequelize db:migrate:undo:all",
    "dev": "nodemon",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix ",
    "prestart:server": "npm run db:migrate",
    "start:server": "node src/bin/server.js",
    "start:worker": "node src/bin/payable-worker.js",
    "start": "if [ $APP_TYPE = \"server\" ]; then npm run start:server; else npm run start:worker; fi",
    "test": "NODE_ENV=test nyc ava --verbose 'test/**/*.test.js'"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@hapi/joi-date": "^2.0.1",
    "aws-sdk": "^2.814.0",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "cuid": "^2.1.8",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "log4js": "^6.2.1",
    "pg": "^8.0.2",
    "pg-hstore": "^2.3.3",
    "ramda": "^0.27.0",
    "sequelize-cli": "5.5.1",
    "sequelize": "^5.21.6"
  },
  "devDependencies": {
    "ava": "^3.7.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2"
  }
}
